<% include partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Contact Us!</h1>
        <p style="text-align: center;">Your username and email are included with your message so that we can respond to questions!</p>
        <div style="width: 50%; margin: 25px auto;">
            <form action="/contact"  method="POST">
                <div class="form-group">
                    <textarea required title="Subject" class="form-control" type="text" id="subject" name="subject" placeholder="Subject" cols="40" rows="1"></textarea>
                </div>
                <div class="form-group">
                    <textarea required class="form-control" type="text" name="message" id="message" placeholder="Body" cols="40" rows="10"></textarea>
                </div>
                
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit!</button>
                </div>
                
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>

<% include partials/footer %>